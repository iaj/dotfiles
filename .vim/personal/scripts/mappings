nnoremap \dg call WordUnderCursor()
fun! WordUnderCursor() "{{{
    let substr = strpart(getline('.'), -1, col('.')+1)
    let substr = matchstr(substr, "[^ \t]*$")
    echomsg substr
endfunction "}}}

